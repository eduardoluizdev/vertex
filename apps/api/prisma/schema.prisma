generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum PersonType {
  INDIVIDUAL
  COMPANY
}

enum Recurrence {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}

enum CampaignStatus {
  DRAFT
  SCHEDULED
  SENT
  CANCELLED
  FAILED
}

enum NotificationType {
  EXPIRATION_WARNING
}

enum CampaignChannel {
  EMAIL
  WHATSAPP
}

enum ProposalStatus {
  DRAFT
  SENT
  APPROVED
  REJECTED
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  avatar    String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  customers            Customer[]
  passwordResetTokens  PasswordResetToken[]
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
}

model Company {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String?
  address   String?
  logo      String?
  cnpj      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Notification Settings
  expirationWarningEnabled Boolean @default(true)
  expirationWarningDays    Int     @default(2)
  dispatchTime             String  @default("09:00")

  customers Customer[]
  services Service[]
  whatsappInstance WhatsappInstance?
  integrationConfigs IntegrationConfig[]
  campaigns Campaign[]
  proposals Proposal[]
  proposalWhatsappTemplate ProposalWhatsappTemplate?
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone        String?
  website      String?
  zip          String?
  street       String?
  neighborhood String?
  number       String?
  complement   String?
  city         String?
  state        String?
  document     String?
  personType PersonType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String?  @unique
  user      User?    @relation(fields: [userId], references: [id])

  companyId String
  company   Company  @relation(fields: [companyId], references: [id])

  services Subscription[]
  campaigns Campaign[]
  proposals Proposal[]
}

model Service {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Float
  recurrence  Recurrence
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  companyId String
  company   Company  @relation(fields: [companyId], references: [id])

  customers Subscription[]
}

model Subscription {
  id        String   @id @default(uuid())
  
  recurrenceDay   Int
  recurrenceMonth Int?
  
  customerId String
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  
  serviceId  String
  service    Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([customerId, serviceId])
}

model IntegrationConfig {
  id        String   @id @default(uuid())
  provider  String   
  name      String
  config    Json     @default("{}")
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  companyId String?
  company   Company? @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([provider, companyId])
  @@map("integration_configs")
}

model Campaign {
  id          String   @id @default(uuid())
  name        String
  subject     String
  content     String   @db.Text
  status      CampaignStatus @default(DRAFT)
  targetAudience TargetAudience @default(ALL)
  channels    CampaignChannel[] @default([EMAIL])
  scheduledAt DateTime?
  sentAt      DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  companyId   String
  company     Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  customers   Customer[]
}

enum TargetAudience {
  ALL
  ACTIVE_CLIENTS
  INACTIVE_CLIENTS
  SPECIFIC_CLIENTS
}

model NotificationTemplate {
  id        String   @id @default(uuid())
  type      NotificationType @unique
  subject   String
  content   String   @db.Text
  isActive  Boolean  @default(true)
  updatedAt DateTime @updatedAt
}

model WhatsappInstance {
  id              String   @id @default(uuid())
  instanceName    String   @unique
  status          String   @default("DISCONNECTED")
  connectionState String?
  qrcode          String?  @db.Text
  
  companyId       String   @unique
  company         Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("whatsapp_instances")
}

model Proposal {
  id           String         @id @default(uuid())
  number       Int
  title        String
  status       ProposalStatus @default(DRAFT)
  proposalDate DateTime       @default(now())
  followUpDate DateTime?
  notes        String?        @db.Text
  publicToken  String         @unique @default(uuid())
  totalValue   Float          @default(0)

  customerId   String
  customer     Customer       @relation(fields: [customerId], references: [id])

  companyId    String
  company      Company        @relation(fields: [companyId], references: [id], onDelete: Cascade)

  items        ProposalItem[]

  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@unique([companyId, number])
}

model ProposalItem {
  id          String   @id @default(uuid())
  name        String
  description String?
  quantity    Float
  unitPrice   Float
  totalPrice  Float

  proposalId  String
  proposal    Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)
}

model ProposalWhatsappTemplate {
  id               String   @id @default(uuid())
  template         String   @db.Text
  followUpTemplate String?  @db.Text
  companyId        String   @unique
  company          Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  updatedAt        DateTime @updatedAt

  @@map("proposal_whatsapp_templates")
}