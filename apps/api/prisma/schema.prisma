generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum PersonType {
  INDIVIDUAL
  COMPANY
}

enum Recurrence {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  avatar    String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  customers Customer[]
}

model Company {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String?
  address   String?
  logo      String?
  cnpj      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  customers Customer[]
  services Service[]
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone        String?
  zip          String?
  street       String?
  neighborhood String?
  number       String?
  complement   String?
  city         String?
  state        String?
  document     String?
  personType PersonType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String?  @unique
  user      User?    @relation(fields: [userId], references: [id])

  companyId String
  company   Company  @relation(fields: [companyId], references: [id])

  services Service[]
}

model Service {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Float
  recurrence  Recurrence
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  companyId String
  company   Company  @relation(fields: [companyId], references: [id])

  customers Customer[]
}